# app.py
from flask import Flask, request, jsonify
from catboost import CatBoostClassifier
import pandas as pd

app = Flask(__name__)

# 1. Carregar o Modelo na inicialização (para ser rápido)
model = CatBoostClassifier()
try:
    model.load_model('modelo_previsao_voos.bin')
    print("Modelo carregado com sucesso!")
except Exception as e:
    print(f"Erro ao carregar modelo: {e}")

@app.route('/predict', methods=['POST'])
def predict():
    try:
        # 2. Receber o JSON do Java
        dados = request.get_json()
        
        # 3. Transformar em DataFrame (O CatBoost espera colunas com nomes específicos)
        # O Java deve enviar um JSON com as chaves exatas que o modelo treinou
        df_input = pd.DataFrame([dados])
        
        # 4. Fazer a previsão
        predicao = model.predict(df_input)
        probabilidade = model.predict_proba(df_input)
        
        # 5. Retornar resposta
        return jsonify({
            'vai_atrasar': int(predicao[0]),
            'probabilidade_atraso': float(probabilidade[0][1])
        })

    except Exception as e:
        return jsonify({'erro': str(e)}), 400

if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000)
